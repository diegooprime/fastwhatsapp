{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "fastwhatsapp",
  "title": "FastWhatsApp",
  "description": "Send WhatsApp messages quickly with keyboard shortcuts. Features favorites, image sharing, and chat history.",
  "icon": "command-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/diegooprime/fastwhatsapp.git"
  },
  "author": "diegooprime",
  "categories": ["Communication"],
  "license": "MIT",
  "keywords": ["whatsapp", "messaging", "chat", "communication", "send message"],
  "commands": [
    {
      "name": "index",
      "title": "WhatsApp",
      "description": "Open WhatsApp contacts and send messages",
      "mode": "view"
    },
    {
      "name": "inbox",
      "title": "WhatsApp Inbox",
      "description": "View unread WhatsApp messages",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "title": "API Key",
      "description": "API key for authenticating with the WhatsApp service. Find it in ~/.whatsapp-raycast/api-key",
      "type": "password",
      "required": true
    },
    {
      "name": "favoriteContacts",
      "title": "Favorite Contacts",
      "description": "Comma-separated contact names (case-insensitive partial match)",
      "type": "textfield",
      "required": false,
      "default": ""
    },
    {
      "name": "serviceUrl",
      "title": "Service URL",
      "description": "Full URL (http://host:3847) or just port (3847) for localhost",
      "type": "textfield",
      "required": false,
      "default": "3847",
      "placeholder": "http://nuc.local:3847"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.10",
    "@raycast/utils": "^1.19.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "~20.10.0",
    "@types/react": "^18.2.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "overrides": {
    "@types/react": "^18.2.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
